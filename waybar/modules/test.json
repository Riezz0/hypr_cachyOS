//Grouped-Apps5///////////////////////////////////////////////////////////////////////////////////////////|
{"group/apps5": {"orientation": "inherit",                                                           /////|
"drawer": {"transition-duration": 300, "transition-left-to-right": false,                            /////|
"children-class": "drawer-modules"},                                                                 /////|
"modules": ["custom/drawer5","custom/shutdown","custom/restart","custom/lock"],},                    /////|
//////////////////////////////////////////////////////////////////////////////////////////////////////////|

//Drawer5/////////////////////////////////////////////////////////////////////////////////////////////////|
"custom/drawer5": {"format": "    ", "tooltip": false,                                               /////|
//////////////////////////////////////////////////////////////////////////////////////////////////////////|

//Shutdown////////////////////////////////////////////////////////////////////////////////////////////////|
"custom/shutdown": {"format": "    ", "tooltip": false,                                              /////|
"on-click": "systemctl poweroff", "tooltip": true,                                                   /////|
"tooltip-format": "Shutdown PC" },                                                                   /////|
//////////////////////////////////////////////////////////////////////////////////////////////////////////|

//Restart/////////////////////////////////////////////////////////////////////////////////////////////////|
"custom/restart": {"format": "    ", "tooltip": false,                                               /////|
"on-click": "systemctl reboot", "tooltip": true,                                                     /////|
"tooltip-format": "Restart PC" },                                                                    /////|
//////////////////////////////////////////////////////////////////////////////////////////////////////////|

//Lock////////////////////////////////////////////////////////////////////////////////////////////////////|
"custom/lock": {"format": "    ", "tooltip": false,                                                  /////|
"on-click": "hyprlock", "tooltip": true,                                                             /////|
"tooltip-format": "Lock PC" },                                                                       /////|
//////////////////////////////////////////////////////////////////////////////////////////////////////////|



